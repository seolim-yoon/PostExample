<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.postexample.ui.view.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/postAddFragment"
        android:name="com.example.postexample.ui.view.fragment.PostAddFragment"
        android:label="PostAddFragment"
        tools:layout="@layout/fragment_post_add"/>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.example.postexample.ui.view.fragment.UserInfoFragment"
        android:label="UserInfoFragment"
        tools:layout="@layout/fragment_user_info"/>
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.example.postexample.ui.view.fragment.PostDetailFragment"
        android:label="PostDetailFragment" />
</navigation>